<div id="posts--list">
    {%- for post in collections.post | reverse -%}
        {%- if(post.data.tags.includes('hate')) -%}
            <article>
                <a href="{{ post.url }}">
                    <h2>
                        {{ post.data.title }}
                    </h2>
                </a>
                <p class="post--time" datetime="{{ post.data.date }}">
                    {{ post.data.date | dateFilter }}
                </p>
                <p>
                    {{ post.data.page.excerpt }}
                </p>
            </article>
        {%- endif -%}
    {%- endfor -%}
</div>
